generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPERATOR
  AUDITOR
  CLIENT
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  passwordHash     String    @map("password_hash")
  name             String
  role             Role      @default(CLIENT)
  isActive         Boolean   @default(true) @map("is_active")
  twoFactorSecret  String?   @map("two_factor_secret")
  twoFactorEnabled Boolean   @default(false) @map("two_factor_enabled")
  lastLoginAt      DateTime? @map("last_login_at")
  failedAttempts   Int       @default(0) @map("failed_attempts")
  lockedUntil      DateTime? @map("locked_until")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  sessions  Session[]
  auditLogs AuditLog[]

  // CPR Protocol relations
  assignedProtocols  Protocol[]        @relation("AssignedProtocols")
  closedProtocols    Protocol[]        @relation("ClosedProtocols")
  protocolMessages   ProtocolMessage[]

  @@map("users")
}

model Session {
  id               String   @id @default(cuid())
  userId           String   @map("user_id")
  refreshTokenHash String   @unique @map("refresh_token_hash")
  userAgent        String?  @map("user_agent")
  ipAddress        String?  @map("ip_address")
  expiresAt        DateTime @map("expires_at")
  createdAt        DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}

model AuditLog {
  id            String   @id @default(cuid())
  userId        String?  @map("user_id")
  action        String
  resource      String?
  resourceId    String?  @map("resource_id")
  details       Json?
  ipAddress     String?  @map("ip_address")
  userAgent     String?  @map("user_agent")
  correlationId String?  @map("correlation_id")
  createdAt     DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@index([correlationId])
  @@map("audit_logs")
}

model Instance {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  description     String?
  status          String   @default("stopped")
  configPath      String?  @map("config_path")
  isHidden        Boolean  @default(false) @map("is_hidden")
  readyForProduction Boolean @default(false) @map("ready_for_production")
  // LXC container mapping
  containerName   String?  @map("container_name")
  containerHost   String?  @map("container_host")
  containerType   String?  @map("container_type")
  // Gateway config
  gatewayMode     String?  @map("gateway_mode")
  gatewayBind     String?  @map("gateway_bind")
  gatewayPort     Int?     @map("gateway_port")
  gatewayToken    String?  @map("gateway_token")
  gatewayStatus   String?  @map("gateway_status")
  // Plan
  planId          String?  @map("plan_id")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  configs           InstanceConfig[]
  configHistory     ConfigHistory[]
  providers         Provider[]
  apiIntegrations   ApiIntegration[]
  agents            Agent[]
  channels          Channel[]
  webhookEndpoints  WebhookEndpoint[]
  contactCache      ContactCache[]
  protocols         Protocol[]

  @@map("instances")
}

model InstanceConfig {
  id         String   @id @default(cuid())
  instanceId String   @map("instance_id")
  key        String
  value      String
  encrypted  Boolean  @default(false)
  version    Int      @default(1)
  updatedAt  DateTime @updatedAt @map("updated_at")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@unique([instanceId, key])
  @@map("instance_configs")
}

model ConfigHistory {
  id            String   @id @default(cuid())
  instanceId    String   @map("instance_id")
  key           String
  previousValue String?  @map("previous_value")
  newValue      String?  @map("new_value")
  changedBy     String   @map("changed_by")
  correlationId String?  @map("correlation_id")
  createdAt     DateTime @default(now()) @map("created_at")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@index([instanceId])
  @@index([createdAt])
  @@index([changedBy])
  @@map("config_history")
}

enum ProviderType {
  OPENAI
  ANTHROPIC
  OPENROUTER
  ELEVENLABS
  CUSTOM
}

model Provider {
  id         String       @id @default(cuid())
  instanceId String       @map("instance_id")
  type       ProviderType
  name       String
  apiKey     String       @map("api_key")
  baseUrl    String?      @map("base_url")
  model      String?
  isActive   Boolean      @default(true) @map("is_active")
  isDefault  Boolean      @default(false) @map("is_default")
  priority   Int          @default(0)
  lastTestAt DateTime?    @map("last_test_at")
  lastTestOk Boolean?     @map("last_test_ok")
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@index([instanceId])
  @@index([isDefault])
  @@index([priority])
  @@map("providers")
}

model ApiIntegration {
  id              String  @id @default(cuid())
  instanceId      String  @map("instance_id")
  name            String
  baseUrl         String  @map("base_url")
  authType        String  @default("bearer") @map("auth_type")
  authCredentials String? @map("auth_credentials")
  scopes          Json?
  rateLimitReqs   Int?    @map("rate_limit_reqs")
  rateLimitWindow Int?    @map("rate_limit_window")
  isActive        Boolean @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@index([instanceId])
  @@map("api_integrations")
}

// ═══════════════════════════════════════
// JOB SYSTEM
// ═══════════════════════════════════════

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model Job {
  id           String    @id @default(cuid())
  instanceId   String?   @map("instance_id")
  userId       String    @map("user_id")
  type         String
  description  String
  status       JobStatus @default(PENDING)
  input        Json?
  output       Json?
  error        String?
  retries      Int       @default(0)
  maxRetries   Int       @default(3) @map("max_retries")
  timeout      Int       @default(60000)
  startedAt    DateTime? @map("started_at")
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime  @default(now()) @map("created_at")

  steps JobStep[]

  @@index([instanceId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("jobs")
}

model JobStep {
  id        String    @id @default(cuid())
  jobId     String    @map("job_id")
  name      String
  status    JobStatus @default(PENDING)
  output    String?
  error     String?
  startedAt DateTime? @map("started_at")
  endedAt   DateTime? @map("ended_at")
  sortOrder Int       @default(0) @map("sort_order")

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@map("job_steps")
}

// ═══════════════════════════════════════
// PLANS & LIMITS
// ═══════════════════════════════════════

model Plan {
  id              String  @id @default(cuid())
  name            String  @unique
  description     String?
  maxMessages     Int?    @map("max_messages")
  maxSessions     Int?    @map("max_sessions")
  maxTokens       Int?    @map("max_tokens")
  maxCostCents    Int?    @map("max_cost_cents")
  maxChannels     Int?    @map("max_channels")
  maxProviders    Int?    @map("max_providers")
  blockOnExceed   Boolean @default(true) @map("block_on_exceed")
  fallbackAction  String  @default("block") @map("fallback_action")
  isActive        Boolean @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  usages PlanUsage[]

  @@map("plans")
}

model PlanUsage {
  id           String   @id @default(cuid())
  planId       String   @map("plan_id")
  instanceId   String   @map("instance_id")
  period       String
  messages     Int      @default(0)
  sessions     Int      @default(0)
  tokensUsed   Int      @default(0) @map("tokens_used")
  costCents    Int      @default(0) @map("cost_cents")
  channels     Int      @default(0)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([planId, instanceId, period])
  @@index([instanceId])
  @@map("plan_usages")
}

// ═══════════════════════════════════════
// AGENTS
// ═══════════════════════════════════════

model Agent {
  id           String   @id @default(cuid())
  instanceId   String   @map("instance_id")
  name         String
  description  String?
  systemPrompt String?  @map("system_prompt") @db.Text
  model         String?
  fallbackModel String?  @map("fallback_model")
  isDefault     Boolean  @default(false) @map("is_default")
  isActive     Boolean  @default(true) @map("is_active")
  personality  Json?
  emoji         String?
  avatar        String?
  theme         String?
  bindings      Json?
  sandbox       Json?
  toolsAllow    Json?     @map("tools_allow")
  toolsDeny     Json?     @map("tools_deny")
  workspacePath String?   @map("workspace_path")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@index([instanceId])
  @@map("agents")
}

// ═══════════════════════════════════════
// CHANNELS
// ═══════════════════════════════════════

enum ChannelType {
  WHATSAPP
  TELEGRAM
  SLACK
  DISCORD
  TEAMS
  GOOGLE_CHAT
  MATRIX
  MATTERMOST
  NEXTCLOUD
  LINE
  WEBHOOK
  CLI
  WEB
  API
  IMESSAGE
  SIGNAL
}

model Channel {
  id         String      @id @default(cuid())
  instanceId String      @map("instance_id")
  type       ChannelType
  name       String
  config     Json?
  status     String      @default("disconnected")
  isActive   Boolean     @default(true) @map("is_active")
  dmPolicy   String      @default("open") @map("dm_policy")      // pairing | allowlist | open | disabled
  allowFrom  Json        @default("[]") @map("allow_from")        // E.164 numbers or IDs
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @updatedAt @map("updated_at")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@index([instanceId])
  @@map("channels")
}

// ═══════════════════════════════════════
// WEBHOOKS
// ═══════════════════════════════════════

model WebhookEndpoint {
  id         String   @id @default(cuid())
  instanceId String   @map("instance_id")
  url        String
  secret     String?
  events     Json     @default("[]")
  isActive   Boolean  @default(true) @map("is_active")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  logs     WebhookLog[]

  @@index([instanceId])
  @@map("webhook_endpoints")
}

model WebhookLog {
  id         String   @id @default(cuid())
  endpointId String   @map("endpoint_id")
  eventType  String   @map("event_type")
  payload    Json?
  statusCode Int?     @map("status_code")
  response   String?  @db.Text
  retries    Int      @default(0)
  success    Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")

  endpoint WebhookEndpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)

  @@index([endpointId])
  @@index([createdAt])
  @@index([success])
  @@map("webhook_logs")
}

// ═══════════════════════════════════════
// SETUP PROGRESS
// ═══════════════════════════════════════

model SetupProgress {
  id          String   @id @default(cuid())
  instanceId  String   @unique @map("instance_id")
  currentStep Int      @default(0) @map("current_step")
  steps       Json     @default("[]")
  completed   Boolean  @default(false)
  startedAt   DateTime @default(now()) @map("started_at")
  completedAt DateTime? @map("completed_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("setup_progress")
}

// ═══════════════════════════════════════
// CONTACT CACHE (WhatsApp profile data)
// ═══════════════════════════════════════

model ContactCache {
  id            String   @id @default(cuid())
  instanceId    String   @map("instance_id")
  contactId     String   @map("contact_id")
  displayName   String?  @map("display_name")
  profilePicUrl String?  @map("profile_pic_url")
  phone         String?
  lastFetched   DateTime @default(now()) @map("last_fetched")

  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@unique([instanceId, contactId])
  @@index([instanceId])
  @@map("contact_cache")
}

// ═══════════════════════════════════════
// CPR — SISTEMA DE PROTOCOLOS
// ═══════════════════════════════════════

enum ProtocolStatus {
  ACTIVE
  ESCALATED
  ASSIGNED
  IN_PROGRESS
  PENDING_CLOSURE
  CLOSED
}

enum AttendanceMode {
  AI_ONLY
  MODE_A
  MODE_B
}

enum ProtocolMessageType {
  INTERNAL
  DIRECT
  NOTE
  SYSTEM
}

enum ProtocolAuditAction {
  CREATED
  ESCALATED
  ASSIGNED
  MODE_CHANGED
  MESSAGE_SENT
  NOTE_ADDED
  TAKEOVER
  RETURNED_TO_AI
  CLOSED
  SURVEY_SENT
  SURVEY_ANSWERED
  TRANSFERRED
}

model Protocol {
  id               String          @id @default(cuid())
  number           String          @unique
  instanceId       String          @map("instance_id")
  sessionId        String          @map("session_id")
  contactId        String          @map("contact_id")
  contactName      String?         @map("contact_name")
  channel          String
  status           ProtocolStatus  @default(ACTIVE)
  mode             AttendanceMode  @default(AI_ONLY)
  assignedTo       String?         @map("assigned_to")
  escalationReason String?         @map("escalation_reason")
  escalatedAt      DateTime?       @map("escalated_at")
  assignedAt       DateTime?       @map("assigned_at")
  closedAt         DateTime?       @map("closed_at")
  closedBy         String?         @map("closed_by")
  closureReason    String?         @map("closure_reason")
  closureResult    String?         @map("closure_result") @db.Text
  tags             Json            @default("[]")
  metadata         Json?
  createdAt        DateTime        @default(now()) @map("created_at")
  updatedAt        DateTime        @updatedAt @map("updated_at")

  instance       Instance           @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  assignedUser   User?              @relation("AssignedProtocols", fields: [assignedTo], references: [id])
  closedByUser   User?              @relation("ClosedProtocols", fields: [closedBy], references: [id])
  messages       ProtocolMessage[]
  survey         SatisfactionSurvey?
  learningPackets LearningPacket[]
  auditEntries   ProtocolAudit[]

  @@index([instanceId])
  @@index([sessionId])
  @@index([contactId])
  @@index([assignedTo])
  @@index([status])
  @@index([createdAt])
  @@map("protocols")
}

model ProtocolMessage {
  id         String              @id @default(cuid())
  protocolId String              @map("protocol_id")
  userId     String?             @map("user_id")
  type       ProtocolMessageType
  content    String              @db.Text
  metadata   Json?
  createdAt  DateTime            @default(now()) @map("created_at")

  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id])

  @@index([protocolId])
  @@index([createdAt])
  @@map("protocol_messages")
}

model SatisfactionSurvey {
  id         String    @id @default(cuid())
  protocolId String    @unique @map("protocol_id")
  rating     Int?
  comment    String?   @db.Text
  sentAt     DateTime  @default(now()) @map("sent_at")
  answeredAt DateTime? @map("answered_at")

  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)

  @@map("satisfaction_surveys")
}

model LearningPacket {
  id               String   @id @default(cuid())
  protocolId       String   @map("protocol_id")
  instanceId       String   @map("instance_id")
  escalationReason String   @map("escalation_reason")
  aiContext        String   @db.Text @map("ai_context")
  humanResponse    String   @db.Text @map("human_response")
  resolution       String?  @db.Text
  tags             Json     @default("[]")
  createdAt        DateTime @default(now()) @map("created_at")

  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)

  @@index([instanceId])
  @@index([createdAt])
  @@map("learning_packets")
}

model ProtocolAudit {
  id         String              @id @default(cuid())
  protocolId String              @map("protocol_id")
  userId     String?             @map("user_id")
  action     ProtocolAuditAction
  details    Json?
  createdAt  DateTime            @default(now()) @map("created_at")

  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)

  @@index([protocolId])
  @@index([action])
  @@index([createdAt])
  @@map("protocol_audit")
}

model ProtocolSequence {
  id      String @id @default("singleton")
  year    Int
  lastNum Int    @default(0) @map("last_num")

  @@map("protocol_sequence")
}
